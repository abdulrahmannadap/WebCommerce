@model IEnumerable<Category>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Type</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr class="table-active">
                <th scope="row">Active</th>
                <td>@category.Id</td>
                <td>@category.CategoryName</td>
                <td>
                    <a asp-controller="Categorys" asp-action="CategoryUpsert" asp-route-id="@category.Id" class="btn btn-outline-primary">Edit</a>
                    <a asp-controller="Categorys" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
                  